@page "/login"
@using clypse.portal.Models

<PageTitle>Clypse Portal - Login</PageTitle>

<!-- Title Bar (similar to HomeLayout) -->
<div class="text-white p-3 d-flex justify-content-between align-items-center" style="background-color: var(--clypse-primary);">
    <div class="d-flex align-items-center">
        @if (AppSettings.ShowLogoInTitleBar)
        {
            <img src="/titlebar-logo.png" alt="@AppSettings.ApplicationTitle" class="me-2" style="height: 32px;" />
        }
        else
        {
            <h4 class="mb-0">@AppSettings.ApplicationTitle</h4>
        }
    </div>
    <button class="theme-switcher" @onclick="ToggleTheme" title="Toggle theme">
        <i class="bi @themeIcon"></i>
    </button>
</div>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h3 class="text-center">Login</h3>
                </div>
                <div class="card-body">
                    <EditForm Model="@loginModel" OnValidSubmit="@HandleLogin">
                        <DataAnnotationsValidator />
                        <ValidationSummary />

                        <div class="mb-3">
                            <label for="username" class="form-label">Username:</label>
                            <InputText id="username" class="form-control" @bind-Value="loginModel.Username" placeholder="Enter your username" />
                        </div>

                        <div class="mb-3">
                            <label for="password" class="form-label">Password:</label>
                            <InputText id="password" type="password" class="form-control" @bind-Value="loginModel.Password" placeholder="Enter your password" />
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary" disabled="@isLoading">
                                @if (isLoading)
                                {
                                    <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                                    <span>Logging in...</span>
                                }
                                else
                                {
                                    <span>Login</span>
                                }
                            </button>
                        </div>

                        @if (!string.IsNullOrEmpty(errorMessage))
                        {
                            <div class="alert alert-danger mt-3" role="alert">
                                @errorMessage
                            </div>
                        }
                    </EditForm>
                    @if (Globals.IsDebugBuild)
                    {
                        <div class="text-center mt-3">
                            <a href="/test" class="btn btn-link">Go to Test Page</a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>


