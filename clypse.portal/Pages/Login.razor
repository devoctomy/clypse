@page "/login"
@using clypse.portal.Models

<PageTitle>Clypse Portal - Login</PageTitle>

<!-- Title Bar (similar to HomeLayout) -->
<div class="text-white p-3 d-flex justify-content-between align-items-center" style="background-color: var(--clypse-primary);">
    <div class="d-flex align-items-center">
        @if (AppSettings.ShowLogoInTitleBar)
        {
            <img src="/images/titlebar-logo.png" alt="@AppSettings.ApplicationTitle" class="me-2" style="height: 32px;" />
        }
        else
        {
            <h4 class="mb-0">@AppSettings.ApplicationTitle</h4>
        }
    </div>
    <button class="theme-switcher" @onclick="ToggleTheme" title="Toggle theme">
        <i class="bi @themeIcon"></i>
    </button>
</div>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <div class="text-center">
                        <img src="/images/icon-192.png" alt="Clypse" style="margin: 8px 0;" />
                    </div>
                </div>
                <div class="card-body">
                    @if (showUsersList && savedUsers.Any())
                    {
                        <!-- Saved Users List -->
                        <div class="mb-3">
                            <div class="d-grid gap-2">
                                @foreach (var user in savedUsers)
                                {
                                    <div class="input-group">
                                        <button type="button" class="btn btn-outline-primary d-flex align-items-center flex-grow-1" @onclick="() => SelectUser(user)">
                                            <i class="bi bi-person-circle me-3"></i>
                                            <span>@user.Email</span>
                                        </button>
                                        <button type="button" class="btn btn-outline-danger" @onclick="() => RemoveUser(user)" title="Remove user">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </div>
                                }
                            </div>
                            <div class="text-center mt-3">
                                <button type="button" class="btn btn-link" @onclick="ShowLoginForm">
                                    Use different account
                                </button>
                            </div>
                        </div>
                    }
                    else
                    {
                        <!-- Login Form -->
                        <EditForm Model="@loginModel" OnValidSubmit="@HandleLogin">
                            <DataAnnotationsValidator />
                            <ValidationSummary />

                            @if (savedUsers.Any())
                            {
                                <div class="mb-3 text-center">
                                    <button type="button" class="btn btn-outline-secondary btn-sm" @onclick="ShowUsersList">
                                        <i class="bi bi-people me-1"></i>Remembered Users
                                    </button>
                                </div>
                            }

                            @if (!passwordResetRequired)
                            {
                                <div class="mb-3">
                                    <div class="input-group">
                                        <span class="input-group-text">
                                            <i class="bi bi-person"></i>
                                        </span>
                                        <InputText id="username" class="form-control" @bind-Value="loginModel.Username" placeholder="Enter your username" readonly="@isUsernameReadonly" />
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <div class="input-group">
                                        <span class="input-group-text">
                                            <i class="bi bi-lock"></i>
                                        </span>
                                        <InputText id="password" type="password" class="form-control" @bind-Value="loginModel.Password" placeholder="Enter your password" />
                                    </div>
                                </div>

                                @if (showRememberMe)
                                {
                                    <div class="mb-3">
                                        <div class="form-check">
                                            <InputCheckbox id="rememberMe" class="form-check-input" @bind-Value="rememberMe" />
                                            <label class="form-check-label" for="rememberMe">
                                                Remember me
                                            </label>
                                        </div>
                                    </div>
                                }
                            }

                            @if (!passwordResetRequired)
                            {
                                <div class="d-grid">
                                    <button type="submit" class="btn btn-primary" disabled="@isLoading">
                                        @if (isLoading)
                                        {
                                            <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                                            <span>Logging in...</span>
                                        }
                                        else
                                        {
                                            <span>Login</span>
                                        }
                                    </button>
                                </div>
                            }

                            @if (passwordResetRequired)
                            {
                                <div class="mt-3">
                                    <div class="mb-3">
                                        <div class="input-group">
                                            <span class="input-group-text">
                                                <i class="bi bi-lock"></i>
                                            </span>
                                            <InputText id="newPassword" type="password" class="form-control" @bind-Value="newPassword" placeholder="Enter new password" />
                                        </div>
                                    </div>

                                    <div class="mb-3">
                                        <div class="input-group">
                                            <span class="input-group-text">
                                                <i class="bi bi-lock-fill"></i>
                                            </span>
                                            <InputText id="confirmPassword" type="password" class="form-control" @bind-Value="confirmPassword" placeholder="Confirm new password" />
                                        </div>
                                    </div>

                                    <div class="d-grid">
                                        <button type="button" class="btn btn-primary" @onclick="HandlePasswordChange" disabled="@(isLoading || string.IsNullOrEmpty(newPassword) || newPassword != confirmPassword)">
                                            @if (isLoading)
                                            {
                                                <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                                                <span>Changing password...</span>
                                            }
                                            else
                                            {
                                                <span>Change Password</span>
                                            }
                                        </button>
                                    </div>
                                </div>
                            }

                            @if (!string.IsNullOrEmpty(errorMessage))
                            {
                                <div class="alert alert-danger mt-3" role="alert">
                                    @errorMessage
                                </div>
                            }
                        </EditForm>
                    }
                    @if (Globals.IsDebugBuild)
                    {
                        <div class="text-center mt-3">
                            <a href="/test" class="btn btn-link">Go to Test Page</a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- WebAuthn Setup Modal -->
@if (showWebAuthnPrompt)
{
    <div class="modal d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">
                        <i class="bi bi-fingerprint me-2"></i>
                        Enable Biometric Login
                    </h5>
                </div>
                <div class="modal-body">
                    @if (!string.IsNullOrEmpty(webAuthnErrorMessage))
                    {
                        <div class="alert alert-danger">
                            <i class="bi bi-exclamation-triangle me-2"></i>
                            @webAuthnErrorMessage
                        </div>
                        <div class="d-grid">
                            <button type="button" class="btn btn-primary" @onclick="DismissWebAuthnError">
                                Continue to App
                            </button>
                        </div>
                    }
                    else
                    {
                        <div class="text-center mb-3">
                            <i class="bi bi-fingerprint" style="font-size: 3rem; color: var(--bs-primary);"></i>
                        </div>
                        <p class="text-center mb-4">
                            Would you like to use <strong>biometrics</strong> for quicker login next time?
                            <br />
                            <small class="text-muted">Use Touch ID, Windows Hello, or security keys for faster access.</small>
                        </p>
                        
                        <div class="d-grid gap-2">
                            <button type="button" class="btn btn-primary" @onclick="HandleWebAuthnSetup" disabled="@isWebAuthnProcessing">
                                @if (isWebAuthnProcessing)
                                {
                                    <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                                    <span class="ms-2">Setting up biometric login...</span>
                                }
                                else
                                {
                                    <i class="bi bi-fingerprint me-2"></i>
                                    <span>Yes, Enable Biometric Login</span>
                                }
                            </button>
                            <button type="button" class="btn btn-outline-secondary" @onclick="SkipWebAuthnSetup" disabled="@isWebAuthnProcessing">
                                <i class="bi bi-skip-forward me-2"></i>
                                Skip for Now
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
}


