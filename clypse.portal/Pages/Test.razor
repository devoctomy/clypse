@page "/test"

<PageTitle>Clypse Portal - Test</PageTitle>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h3 class="text-center">AWS Cognito Login</h3>
                </div>
                <div class="card-body">
                    @if (!isAuthenticated)
                    {
                        <EditForm Model="@loginModel" OnValidSubmit="@HandleLogin">
                            <DataAnnotationsValidator />
                            <ValidationSummary />

                            <div class="mb-3">
                                <label for="username" class="form-label">Username:</label>
                                <InputText id="username" class="form-control" @bind-Value="loginModel.Username" placeholder="Enter your username" />
                            </div>

                            <div class="mb-3">
                                <label for="password" class="form-label">Password:</label>
                                <InputText id="password" type="password" class="form-control" @bind-Value="loginModel.Password" placeholder="Enter your password" />
                            </div>

                            <div class="d-grid">
                                <button type="submit" class="btn btn-primary" disabled="@isLoading">
                                    @if (isLoading)
                                    {
                                        <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                                        <span>Logging in...</span>
                                    }
                                    else
                                    {
                                        <span>Login</span>
                                    }
                                </button>
                            </div>

                            @if (!string.IsNullOrEmpty(errorMessage))
                            {
                                <div class="alert alert-danger mt-3" role="alert">
                                    @errorMessage
                                </div>
                            }
                        </EditForm>
                    }
                    else
                    {
                        <div class="text-center">
                            <h4 class="text-success mb-4">Successfully Logged In!</h4>
                            
                            <div class="row">
                                <div class="col-12 mb-3">
                                    <label class="form-label fw-bold">Access Token:</label>
                                    <textarea class="form-control" rows="3" readonly>@(accessToken ?? "Not available")</textarea>
                                </div>
                                
                                <div class="col-12 mb-3">
                                    <label class="form-label fw-bold">ID Token:</label>
                                    <textarea class="form-control" rows="3" readonly>@(idToken ?? "Not available")</textarea>
                                </div>
                            </div>

                            @if (awsCredentials != null)
                            {
                                <div class="row">
                                    <div class="col-12 mb-3">
                                        <label class="form-label fw-bold">AWS Access Key ID:</label>
                                        <input type="text" class="form-control" readonly value="@awsCredentials.AccessKeyId" />
                                    </div>
                                    
                                    <div class="col-12 mb-3">
                                        <label class="form-label fw-bold">AWS Secret Access Key:</label>
                                        <input type="password" class="form-control" readonly value="@awsCredentials.SecretAccessKey" />
                                    </div>

                                    @if (!string.IsNullOrEmpty(awsCredentials.SessionToken))
                                    {
                                        <div class="col-12 mb-3">
                                            <label class="form-label fw-bold">AWS Session Token:</label>
                                            <textarea class="form-control" rows="2" readonly>@awsCredentials.SessionToken</textarea>
                                        </div>
                                    }

                                    @if (!string.IsNullOrEmpty(awsCredentials.IdentityId))
                                    {
                                        <div class="col-12 mb-3">
                                            <label class="form-label fw-bold">Identity ID (cognito-identity.amazonaws.com:sub):</label>
                                            <input type="text" class="form-control" value="@awsCredentials.IdentityId" readonly />
                                        </div>
                                    }

                                    <div class="col-12 mb-3">
                                        <label class="form-label fw-bold">Token Expiration:</label>
                                        <input type="text" class="form-control" readonly value="@awsCredentials.Expiration" />
                                    </div>
                                </div>
                            }

                            <div class="d-grid gap-2">
                                <button class="btn btn-success" @onclick="HandleTestClypse" disabled="@isTestingClypse">
                                    @if (isTestingClypse)
                                    {
                                        <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                                        <span>Testing Clypse...</span>
                                    }
                                    else
                                    {
                                        <span>Test Clypse Core</span>
                                    }
                                </button>
                                <button class="btn btn-secondary" @onclick="HandleLogout">Logout</button>
                            </div>

                            @if (showKeyDerivationResults && keyDerivationResults != null)
                            {
                                <div class="modal" tabindex="-1" style="display: block; background-color: rgba(0,0,0,0.5);">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title">Key Derivation Benchmark Results</h5>
                                                <button type="button" class="btn-close" @onclick="() => showKeyDerivationResults = false"></button>
                                            </div>
                                            <div class="modal-body">
                                                <table class="table">
                                                    <thead>
                                                        <tr>
                                                            <th>Algorithm</th>
                                                            <th>Average Time (ms)</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        @foreach (var result in keyDerivationResults.Results)
                                                        {
                                                            <tr>
                                                                <td>@result.Algorithm</td>
                                                                <td>@result.Average!.Value.TotalMilliseconds.ToString("F2")</td>
                                                            </tr>
                                                        }
                                                    </tbody>
                                                </table>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" @onclick="() => showKeyDerivationResults = false">Close</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                            
                            @if (!string.IsNullOrEmpty(clypseTestResult))
                            {
                                <div class="alert alert-info mt-3" role="alert">
                                    <strong>Clypse Test Result:</strong><br/>
                                    @clypseTestResult
                                </div>
                            }
                            
                            @if (!string.IsNullOrEmpty(clypseTestError))
                            {
                                <div class="alert alert-danger mt-3" role="alert">
                                    <strong>Clypse Test Error:</strong><br/>
                                    @clypseTestError
                                </div>
                            }
                        </div>
                    }
                </div>
            </div>
            <div class="text-center mt-3">
                <a href="/login" class="btn btn-link">Back to Login Page</a>
            </div>
        </div>
    </div>

    <div class="row justify-content-center mt-4">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h3 class="text-center">Cryptography Tests</h3>
                </div>
                <div class="card-body">
                    <div class="d-grid">
                        <button class="btn btn-primary" @onclick="HandleTestKeyDerivation" disabled="@isTestingKeyDerivation">
                            @if (isTestingKeyDerivation)
                            {
                                <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                                <span>Testing Key Derivation...</span>
                            }
                            else
                            {
                                <span>Test Key Derivation Algorithms</span>
                            }
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@if (showKeyDerivationResults && keyDerivationResults != null)
{
    <div class="modal" tabindex="-1" style="display: block; background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Key Derivation Benchmark Results</h5>
                    <button type="button" class="btn-close" @onclick="() => showKeyDerivationResults = false"></button>
                </div>
                <div class="modal-body">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Algorithm</th>
                                <th>Average Time (ms)</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var result in keyDerivationResults.Results)
                            {
                                <tr>
                                    <td>@result.Algorithm</td>
                                    <td>@result.Average!.Value.TotalMilliseconds.ToString("F2")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="() => showKeyDerivationResults = false">Close</button>
                </div>
            </div>
        </div>
    </div>
}


