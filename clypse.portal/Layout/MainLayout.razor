@inherits LayoutComponentBase

<div class="d-flex flex-column mobile-safe-layout">
    <main class="flex-grow-1">
        @Body
    </main>
    
    <footer class="bg-light py-3 mt-auto mobile-safe-footer">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-12 text-center">
                    <small class="text-muted">@AppSettings.CopyrightMessage</small>
                    <br />
                    <small class="text-muted">
                        Version 
                        <span class="version-number @(updateAvailable ? "update-available" : "")" 
                              @onclick="HandleVersionClick" 
                              title="Click to view version history">
                            @AppSettings.Version
                            @if (updateAvailable)
                            {
                                <i class="bi bi-exclamation-circle text-warning ms-1"></i>
                            }
                        </span>
                    </small>
                </div>
            </div>
        </div>
    </footer>
</div>

<ChangesDialog Show="@showChangesDialog" 
ShowUpdateButton="@updateAvailable" 
AvailableVersion="@availableVersion"
OnClose="@HandleCloseChangesDialog"
OnUpdate="@HandleInstallUpdate" />

@using clypse.portal.Models


