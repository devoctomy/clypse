@inherits LayoutComponentBase
@using clypse.portal.Models
@implements IDisposable

<CascadingValue Value="this">
    <div class="d-flex flex-column vh-100">
        <!-- Title Bar -->
        <div class="bg-primary text-white p-3 d-flex justify-content-between align-items-center">
            <div class="d-flex align-items-center">
                <!-- Burger Menu Button -->
                <button class="btn btn-link text-white p-0 me-3 burger-btn" 
                        @onclick="ToggleSidebar" 
                        aria-expanded="@isExpanded.ToString().ToLower()" 
                        aria-controls="sidebar-navigation"
                        aria-label="Toggle navigation menu"
                        title="Toggle navigation menu">
                    <i class="bi bi-list" style="font-size: 1.5rem;"></i>
                </button>
                <h4 class="mb-0">@AppSettings.ApplicationTitle</h4>
            </div>
            <button class="theme-switcher" @onclick="ToggleTheme" title="Toggle theme">
                <i class="bi @themeIcon"></i>
            </button>
        </div>

        <div class="flex-grow-1 d-flex">
            <!-- Navigation Sidebar -->
            <nav id="sidebar-navigation" 
                 class="sidebar @(isExpanded ? "expanded" : "collapsed") d-flex flex-column" 
                 style="background-color: var(--clypse-surface-tertiary); border-right: 1px solid var(--clypse-border-light); transition: width 0.3s ease;">
                
                <div class="flex-grow-1 p-3">
                    @if (navigationItems != null && navigationItems.Any())
                    {
                        @foreach (var item in navigationItems.Where(i => i.Action != "delete-vault"))
                        {
                            <button class="btn @item.ButtonClass btn-sm w-100 mb-2 sidebar-btn" 
                                    title="@item.Text"
                                    @onclick="() => HandleNavigationAction(item.Action)">
                                <i class="@item.Icon sidebar-icon"></i>
                                <span class="sidebar-text">@item.Text</span>
                            </button>
                        }
                    }
                </div>
                
                <!-- Delete Vault Section -->
                @if (navigationItems != null && navigationItems.Any(i => i.Action == "delete-vault"))
                {
                    var deleteItem = navigationItems.First(i => i.Action == "delete-vault");
                    <div class="mb-3 px-3">
                        <button class="btn @deleteItem.ButtonClass btn-sm w-100 mb-2 sidebar-btn" 
                                title="@deleteItem.Text"
                                @onclick="() => HandleNavigationAction(deleteItem.Action)">
                            <i class="@deleteItem.Icon sidebar-icon"></i>
                            <span class="sidebar-text">@deleteItem.Text</span>
                        </button>
                    </div>
                }
                
                <!-- Logout at bottom -->
                <div class="mt-auto p-3 border-top">
                    @if (!string.IsNullOrEmpty(sessionTimeRemaining) && isExpanded)
                    {
                        <div class="text-center mb-3 text-muted small">
                            <i class="bi bi-clock me-1"></i>
                            Session expires in @sessionTimeRemaining
                        </div>
                    }
                    <button class="btn btn-danger btn-sm w-100 sidebar-btn" 
                            title="Logout"
                            @onclick="HandleLogout">
                        <i class="bi bi-box-arrow-right sidebar-icon"></i>
                        <span class="sidebar-text">Logout</span>
                    </button>
                </div>
            </nav>

            <!-- Main Content Area -->
            <main class="flex-grow-1 p-4">
                @Body
            </main>
        </div>
    </div>
</CascadingValue>

<style>
    .sidebar {
        width: 80px;
        min-width: 80px;
        overflow: hidden;
    }

    .sidebar.expanded {
        width: 250px;
        min-width: 250px;
    }

    .sidebar-btn {
        display: flex;
        align-items: center;
        text-align: left;
        white-space: nowrap;
        padding: 0.5rem;
        border: none;
    }

    .sidebar-icon {
        min-width: 1.25rem;
        text-align: center;
        margin-right: 0.75rem;
    }

    .sidebar.collapsed .sidebar-text {
        opacity: 0;
        width: 0;
        margin-left: 0;
        overflow: hidden;
    }

    .sidebar.expanded .sidebar-text {
        opacity: 1;
        width: auto;
        margin-left: 0;
    }

    .sidebar.collapsed .sidebar-icon {
        margin-right: 0;
    }

    .sidebar.collapsed .sidebar-btn {
        justify-content: center;
        padding: 0.5rem;
        width: 100%;
        margin: 0 0 0.5rem 0;
    }

    .theme-switcher {
        background: none;
        border: none;
        color: inherit;
        padding: 0.25rem;
        border-radius: 0.25rem;
        transition: background-color 0.15s ease;
    }

    .theme-switcher:hover {
        background-color: rgba(255, 255, 255, 0.1);
    }

    .theme-switcher i {
        font-size: 1.25rem;
    }

    /* Smooth transitions for text and icons */
    .sidebar-text, .sidebar-icon {
        transition: opacity 0.3s ease, width 0.3s ease, margin 0.3s ease;
    }

    /* Tooltip for collapsed state */
    .sidebar.collapsed .sidebar-btn {
        position: relative;
    }

    .sidebar.collapsed .sidebar-btn:hover::after {
        content: attr(title);
        position: absolute;
        left: 100%;
        top: 50%;
        transform: translateY(-50%);
        background: var(--bs-dark);
        color: white;
        padding: 0.25rem 0.5rem;
        border-radius: 0.25rem;
        white-space: nowrap;
        z-index: 1000;
        margin-left: 0.5rem;
        font-size: 0.875rem;
    }

    /* Mobile responsive behavior */
    @@media (max-width: 768px) {
        .sidebar.expanded {
            position: fixed;
            top: 0;
            left: 0;
            height: 100vh;
            z-index: 1050;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.5);
        }
        
        .sidebar.expanded ~ main {
            margin-left: 0;
        }
    }

    /* Hide burger menu button on large screens if always expanded */
    .burger-btn {
        transition: opacity 0.3s ease;
    }
</style>


