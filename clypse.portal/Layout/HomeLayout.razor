@inherits LayoutComponentBase
@using clypse.portal.Models
@implements IDisposable

<CascadingValue Value="this">
    <div class="d-flex flex-column vh-100">
        <!-- Title Bar -->
        <div class="bg-primary text-white p-3 d-flex justify-content-between align-items-center">
            <h4 class="mb-0">@AppSettings.ApplicationTitle</h4>
            <button class="theme-switcher" @onclick="ToggleTheme" title="Toggle theme">
                <i class="bi @themeIcon"></i>
            </button>
        </div>

        <div class="flex-grow-1 d-flex">
            <!-- Navigation Sidebar -->
            <nav class="p-3 d-flex flex-column" style="width: 250px; background-color: var(--clypse-surface-tertiary); border-right: 1px solid var(--clypse-border-light);">
                <div class="flex-grow-1">
                    @if (navigationItems != null && navigationItems.Any())
                    {
                        <h6 class="text-muted mb-3">Actions</h6>
                        @foreach (var item in navigationItems)
                        {
                            <button class="btn @item.ButtonClass btn-sm w-100 mb-2 text-start" @onclick="() => HandleNavigationAction(item.Action)">
                                <i class="@item.Icon me-2"></i>
                                @item.Text
                            </button>
                        }
                    }
                </div>
                
                <!-- Logout at bottom -->
                <div class="mt-auto pt-3 border-top">
                    @if (!string.IsNullOrEmpty(sessionTimeRemaining))
                    {
                        <div class="text-center mb-3 text-muted small">
                            <i class="bi bi-clock me-1"></i>
                            Session expires in @sessionTimeRemaining
                        </div>
                    }
                    <button class="btn btn-outline-danger btn-sm w-100" @onclick="HandleLogout">
                        Logout
                    </button>
                </div>
            </nav>

            <!-- Main Content Area -->
            <main class="flex-grow-1 p-4">
                @Body
            </main>
        </div>
    </div>
</CascadingValue>


