@using clypse.core.Secrets

<div class="modal" style="display: block; background-color: rgba(0,0,0,0.5);" @onclick="OnClose">
    <div class="modal-dialog modal-dialog-centered" @onclick:stopPropagation="true">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="bi bi-key me-2"></i>
                    View Secret
                </h5>
                <button type="button" class="btn-close" @onclick="OnClose"></button>
            </div>
            <div class="modal-body">
                @if (Secret != null)
                {
                    <div class="mb-3">
                        <label class="form-label text-muted small">Name</label>
                        <div class="fw-bold">@Secret.Name</div>
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label text-muted small">Description</label>
                        <div>@(Secret.Description ?? "No description")</div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label text-muted small">Username</label>
                        <div>@(Secret.UserName ?? "Not set")</div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label text-muted small">Email Address</label>
                        <div>@(Secret.EmailAddress ?? "Not set")</div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label text-muted small">Website URL</label>
                        <div>
                            @if (!string.IsNullOrEmpty(Secret.WebsiteUrl))
                            {
                                <a href="@Secret.WebsiteUrl" target="_blank" rel="noopener noreferrer">@Secret.WebsiteUrl</a>
                            }
                            else
                            {
                                <span>Not set</span>
                            }
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label text-muted small">Login URL</label>
                        <div>
                            @if (!string.IsNullOrEmpty(Secret.LoginUrl))
                            {
                                <a href="@Secret.LoginUrl" target="_blank" rel="noopener noreferrer">@Secret.LoginUrl</a>
                            }
                            else
                            {
                                <span>Not set</span>
                            }
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label text-muted small">Password</label>
                        <div class="input-group">
                            <input type="@(showPassword ? "text" : "password")" class="form-control" readonly value="@Secret.Password">
                            <button class="btn btn-outline-secondary" type="button" @onclick="TogglePasswordVisibility">
                                <i class="bi bi-@(showPassword ? "eye-slash" : "eye")"></i>
                            </button>
                        </div>
                    </div>

                    @if (Secret.Tags.Any())
                    {
                        <div class="mb-3">
                            <label class="form-label text-muted small">Tags</label>
                            <div>
                                @foreach (var tag in Secret.Tags)
                                {
                                    <span class="badge bg-secondary me-1">@tag</span>
                                }
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="alert alert-warning">
                        <i class="bi bi-exclamation-triangle me-2"></i>
                        Failed to load secret.
                    </div>
                }
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" @onclick="OnClose">Close</button>
            </div>
        </div>
    </div>
</div>


