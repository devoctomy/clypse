@using clypse.portal.Models

<div class="credentials-page">
    <h2>Credentials</h2>
    
    @if (CurrentVault != null)
    {
        <div class="card mb-4">
            <div class="card-header">
                <h5><i class="bi bi-safe me-2"></i>Current Vault</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4">
                        <strong>ID:</strong> @CurrentVault.Id
                    </div>
                    <div class="col-md-4">
                        <strong>Name:</strong> 
                        @if (!string.IsNullOrEmpty(CurrentVault.Name))
                        {
                            <span>@CurrentVault.Name</span>
                        }
                        else
                        {
                            <span class="text-muted">Unknown</span>
                        }
                    </div>
                    <div class="col-md-4">
                        <strong>Description:</strong> 
                        @if (!string.IsNullOrEmpty(CurrentVault.Description))
                        {
                            <span>@CurrentVault.Description</span>
                        }
                        else
                        {
                            <span class="text-muted">No description</span>
                        }
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-12">
                        <button class="btn btn-outline-secondary" @onclick="HandleLockVault">
                            <i class="bi bi-lock me-2"></i>Lock Vault
                        </button>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h5>Stored Credentials</h5>
                    </div>
                    <div class="card-body">
                        <p class="text-muted">No credentials found in this vault.</p>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-warning" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i>
            No vault is currently unlocked. Please go back to vaults and unlock a vault first.
        </div>
    }
</div>

@code {
    [Parameter] public VaultMetadata? CurrentVault { get; set; }
    [Parameter] public EventCallback OnLockVault { get; set; }

    private async Task HandleLockVault()
    {
        await OnLockVault.InvokeAsync();
    }
}
