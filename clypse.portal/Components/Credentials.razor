@using clypse.portal.Models

<div class="credentials-page">
    <h2>Credentials</h2>
    
    @if (CurrentVault != null)
    {
        <div class="card mb-4">
            <div class="card-header">
                <h5><i class="bi bi-safe me-2"></i>Current Vault</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4">
                        <strong>ID:</strong> @CurrentVault.Id
                    </div>
                    <div class="col-md-4">
                        <strong>Name:</strong> 
                        @if (!string.IsNullOrEmpty(CurrentVault.Name))
                        {
                            <span>@CurrentVault.Name</span>
                        }
                        else
                        {
                            <span class="text-muted">Unknown</span>
                        }
                    </div>
                    <div class="col-md-4">
                        <strong>Description:</strong> 
                        @if (!string.IsNullOrEmpty(CurrentVault.Description))
                        {
                            <span>@CurrentVault.Description</span>
                        }
                        else
                        {
                            <span class="text-muted">No description</span>
                        }
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-12">
                        <button class="btn btn-outline-secondary" @onclick="HandleLockVault">
                            <i class="bi bi-lock me-2"></i>Lock Vault
                        </button>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h5>Stored Secrets</h5>
                    </div>
                    <div class="card-body">
                        @if (CurrentVault.IndexEntries != null && CurrentVault.IndexEntries.Any())
                        {
                            <div class="table-responsive">
                                <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th>Name</th>
                                            <th>Description</th>
                                            <th>Tags</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var entry in CurrentVault.IndexEntries)
                                        {
                                            <tr>
                                                <td>
                                                    <strong>@entry.Name</strong>
                                                </td>
                                                <td>
                                                    @if (!string.IsNullOrEmpty(entry.Description))
                                                    {
                                                        <span>@entry.Description</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="text-muted">No description</span>
                                                    }
                                                </td>
                                                <td>
                                                    @if (!string.IsNullOrEmpty(entry.Tags))
                                                    {
                                                        @foreach (var tag in entry.Tags.Split(',', StringSplitOptions.RemoveEmptyEntries))
                                                        {
                                                            <span class="badge bg-secondary me-1">@tag.Trim()</span>
                                                        }
                                                    }
                                                    else
                                                    {
                                                        <span class="text-muted">No tags</span>
                                                    }
                                                </td>
                                                <td>
                                                    <button class="btn btn-sm btn-outline-primary me-1" title="View Secret">
                                                        <i class="bi bi-eye"></i>
                                                    </button>
                                                    <button class="btn btn-sm btn-outline-secondary me-1" title="Edit Secret">
                                                        <i class="bi bi-pencil"></i>
                                                    </button>
                                                    <button class="btn btn-sm btn-outline-danger" title="Delete Secret">
                                                        <i class="bi bi-trash"></i>
                                                    </button>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        else
                        {
                            <p class="text-muted">No secrets found in this vault.</p>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-warning" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i>
            No vault is currently unlocked. Please go back to vaults and unlock a vault first.
        </div>
    }
</div>

@code {
    [Parameter] public VaultMetadata? CurrentVault { get; set; }
    [Parameter] public EventCallback OnLockVault { get; set; }



    private async Task HandleLockVault()
    {
        await OnLockVault.InvokeAsync();
    }
}
