@using clypse.portal.Models
@using clypse.core.Secrets
@using clypse.core.Vault

<div class="credentials-page">
    <h2>Credentials</h2>
    
    @if (CurrentVault != null)
    {
        <div class="mb-4 p-3 bg-secondary text-white rounded">
            <div class="d-flex align-items-center mb-3">
                <i class="bi bi-safe me-2"></i>
                <h5 class="mb-0">Current Vault</h5>
            </div>
            <div class="row g-3">
                <div class="col-md-4">
                    <div class="mb-1">
                        <small class="text-light opacity-75">ID</small>
                    </div>
                    <div class="fw-bold">@CurrentVault.Id</div>
                </div>
                <div class="col-md-4">
                    <div class="mb-1">
                        <small class="text-light opacity-75">Name</small>
                    </div>
                    <div class="fw-bold">
                        @if (!string.IsNullOrEmpty(CurrentVault.Name))
                        {
                            <span>@CurrentVault.Name</span>
                        }
                        else
                        {
                            <span class="text-light opacity-50">Unknown</span>
                        }
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="mb-1">
                        <small class="text-light opacity-75">Description</small>
                    </div>
                    <div class="fw-bold">
                        @if (!string.IsNullOrEmpty(CurrentVault.Description))
                        {
                            <span>@CurrentVault.Description</span>
                        }
                        else
                        {
                            <span class="text-light opacity-50">No description</span>
                        }
                    </div>
                </div>
            </div>
        </div>
        
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h5>Stored Secrets</h5>
                    </div>
                    <div class="card-body">
                        @if (CurrentVault.IndexEntries != null && CurrentVault.IndexEntries.Any())
                        {
                            <div class="table-responsive">
                                <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th>Name</th>
                                            <th>Description</th>
                                            <th>Tags</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var entry in CurrentVault.IndexEntries)
                                        {
                                            <tr>
                                                <td>
                                                    <strong>@entry.Name</strong>
                                                </td>
                                                <td>
                                                    @if (!string.IsNullOrEmpty(entry.Description))
                                                    {
                                                        <span>@entry.Description</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="text-muted">No description</span>
                                                    }
                                                </td>
                                                <td>
                                                    @if (!string.IsNullOrEmpty(entry.Tags))
                                                    {
                                                        @foreach (var tag in entry.Tags.Split(',', StringSplitOptions.RemoveEmptyEntries))
                                                        {
                                                            <span class="badge bg-secondary me-1">@tag.Trim()</span>
                                                        }
                                                    }
                                                    else
                                                    {
                                                        <span class="text-muted">No tags</span>
                                                    }
                                                </td>
                                                <td>
                                                                                                    <button class="btn btn-sm btn-outline-primary me-1" title="View Secret" @onclick="() => ViewSecret(entry.Id)">
                                                    <i class="bi bi-eye"></i>
                                                </button>
                                                    <button class="btn btn-sm btn-outline-secondary me-1" title="Edit Secret">
                                                        <i class="bi bi-pencil"></i>
                                                    </button>
                                                    <button class="btn btn-sm btn-outline-danger" title="Delete Secret">
                                                        <i class="bi bi-trash"></i>
                                                    </button>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        else
                        {
                            <p class="text-muted">No secrets found in this vault.</p>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-warning" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i>
            No vault is currently unlocked. Please go back to vaults and unlock a vault first.
        </div>
    }
</div>

@if (showViewDialog && currentSecret != null)
{
    <WebSecretView Secret="currentSecret" OnClose="CloseViewDialog" />
}

<LoadingDialog Show="isLoadingSecret" Message="Loading secret..." />

@code {
    [Parameter] public VaultMetadata? CurrentVault { get; set; }
    [Parameter] public string? CurrentVaultKey { get; set; }
    [Parameter] public EventCallback OnLockVault { get; set; }
    [Parameter] public IVaultManager? VaultManager { get; set; }
    
    private WebSecret? currentSecret;
    private bool showViewDialog = false;
    private bool isLoadingSecret = false;



    private async Task HandleLockVault()
    {
        await OnLockVault.InvokeAsync();
    }
    
    private async Task ViewSecret(string secretId)
    {
        Console.WriteLine($"ViewSecret called with secretId: {secretId}");
        
        if (VaultManager == null || CurrentVault == null || string.IsNullOrEmpty(CurrentVaultKey))
        {
            Console.WriteLine("Missing required dependencies for viewing secret");
            return;
        }

        try
        {
            isLoadingSecret = true;
            StateHasChanged();
            
            Console.WriteLine("Loading vault...");
            var vault = await VaultManager.LoadAsync(CurrentVault.Id, CurrentVaultKey, CancellationToken.None);
            
            Console.WriteLine("Loading secret...");
            var secret = await VaultManager.GetSecretAsync(vault, secretId, CurrentVaultKey, CancellationToken.None);
            
            if (secret is WebSecret webSecret)
            {
                Console.WriteLine("Secret loaded successfully, showing dialog");
                currentSecret = webSecret;
                showViewDialog = true;
            }
            else
            {
                Console.WriteLine($"Secret is not a WebSecret: {secret?.GetType().Name}");
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading secret: {ex.Message}");
            Console.WriteLine($"Stack trace: {ex.StackTrace}");
        }
        finally
        {
            isLoadingSecret = false;
            StateHasChanged();
        }
    }
    
    private void CloseViewDialog()
    {
        showViewDialog = false;
        currentSecret = null;
        StateHasChanged();
    }
}
