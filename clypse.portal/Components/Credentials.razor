@using clypse.portal.Models
@using clypse.core.Secrets
@using clypse.core.Vault
@using clypse.portal.Components

<div class="credentials-page">
    <h2>Credentials</h2>
    
    @if (CurrentVault != null)
    {
        <div class="mb-4 p-3 bg-secondary text-white rounded">
            <div class="d-flex align-items-center mb-3">
                <i class="bi bi-safe me-2"></i>
                <h5 class="mb-0">Current Vault</h5>
            </div>
            <div class="row g-3">
                <div class="col-md-4">
                    <div class="mb-1">
                        <small class="text-light opacity-75">ID</small>
                    </div>
                    <div class="fw-bold">@CurrentVault.Id</div>
                </div>
                <div class="col-md-4">
                    <div class="mb-1">
                        <small class="text-light opacity-75">Name</small>
                    </div>
                    <div class="fw-bold">
                        @if (!string.IsNullOrEmpty(CurrentVault.Name))
                        {
                            <span>@CurrentVault.Name</span>
                        }
                        else
                        {
                            <span class="text-light opacity-50">Unknown</span>
                        }
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="mb-1">
                        <small class="text-light opacity-75">Description</small>
                    </div>
                    <div class="fw-bold">
                        @if (!string.IsNullOrEmpty(CurrentVault.Description))
                        {
                            <span>@CurrentVault.Description</span>
                        }
                        else
                        {
                            <span class="text-light opacity-50">No description</span>
                        }
                    </div>
                </div>
            </div>
        </div>
        
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <div class="d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">Stored Secrets</h5>
                            <div class="d-flex align-items-center" style="width: 300px;">
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="bi bi-search"></i>
                                    </span>
                                    <input type="text" 
                                           class="form-control" 
                                           placeholder="Search secrets..." 
                                           @bind="searchTerm" 
                                           @bind:event="oninput"
                                           @onkeyup="HandleSearch" />
                                    @if (!string.IsNullOrEmpty(searchTerm))
                                    {
                                        <button class="btn btn-outline-secondary" @onclick="ClearSearch">
                                            <i class="bi bi-x"></i>
                                        </button>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        @if (filteredEntries.Any())
                        {
                            <div class="table-responsive">
                                <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th>Name</th>
                                            <th>Description</th>
                                            <th>Tags</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var entry in filteredEntries)
                                        {
                                            <tr>
                                                <td>
                                                    <strong>@entry.Name</strong>
                                                </td>
                                                <td>
                                                    @if (!string.IsNullOrEmpty(entry.Description))
                                                    {
                                                        <span>@entry.Description</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="text-muted">No description</span>
                                                    }
                                                </td>
                                                <td>
                                                    @if (!string.IsNullOrEmpty(entry.Tags))
                                                    {
                                                        @foreach (var tag in entry.Tags.Split(',', StringSplitOptions.RemoveEmptyEntries))
                                                        {
                                                            <span class="badge bg-secondary me-1">@tag.Trim()</span>
                                                        }
                                                    }
                                                    else
                                                    {
                                                        <span class="text-muted">No tags</span>
                                                    }
                                                </td>
                                                <td>
                                                                                                    <button class="btn btn-sm btn-outline-primary me-1" title="View Secret" @onclick="() => ViewSecret(entry.Id)">
                                                    <i class="bi bi-eye"></i>
                                                </button>
                                                    <button class="btn btn-sm btn-outline-secondary me-1" title="Edit Secret" @onclick="() => EditSecret(entry.Id)">
                                                        <i class="bi bi-pencil"></i>
                                                    </button>
                                                    <button class="btn btn-sm btn-outline-danger" title="Delete Secret" @onclick="() => ShowDeleteConfirmation(entry.Id, entry.Name)">
                                                        <i class="bi bi-trash"></i>
                                                    </button>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        else
                        {
                            @if (!string.IsNullOrEmpty(searchTerm))
                            {
                                <p class="text-muted">No secrets match your search.</p>
                            }
                            else
                            {
                                <p class="text-muted">No secrets found in this vault.</p>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-warning" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i>
            No vault is currently unlocked. Please go back to vaults and unlock a vault first.
        </div>
    }
</div>

@if (showViewDialog && currentSecret != null)
{
    <WebSecretView Secret="currentSecret" OnClose="CloseViewDialog" />
}

@if (showEditDialog && currentSecret != null)
{
    <WebSecretForm Secret="currentSecret" IsEditMode="true" OnSave="HandleSaveSecret" OnCancel="CloseEditDialog" />
}

@if (showCreateDialog)
{
    <WebSecretForm IsEditMode="false" OnSave="HandleCreateSecret" OnCancel="CloseCreateDialog" />
}

<ConfirmDialog 
    Show="showDeleteConfirmation" 
    Message="@deleteConfirmationMessage" 
    IsProcessing="isDeletingSecret"
    OnConfirm="HandleDeleteSecret" 
    OnCancel="CancelDeleteConfirmation" />

<LoadingDialog Show="isLoadingSecret" Message="Loading secret..." />
<LoadingDialog Show="isSavingSecret" Message="Saving secret..." />


