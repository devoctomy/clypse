@using clypse.core.Vault

<div class="modal @(Show ? "show d-block" : "d-none")" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Vault Verification Results</h5>
                <button type="button" class="btn-close" @onclick="OnClose"></button>
            </div>
            <div class="modal-body">
                @if (Results == null)
                {
                    <div class="text-center">
                        <div class="spinner-border text-primary" role="status">
                            <span class="visually-hidden">Verifying...</span>
                        </div>
                        <p class="mt-2">Verifying vault integrity...</p>
                    </div>
                }
                else
                {
                    <div class="mb-3">
                        <div class="d-flex align-items-center mb-2">
                            @if (Results.Success)
                            {
                                <i class="bi bi-check-circle-fill text-success me-2" style="font-size: 1.5rem;"></i>
                                <h6 class="mb-0">Vault integrity verified successfully</h6>
                            }
                            else
                            {
                                <i class="bi bi-exclamation-triangle-fill text-warning me-2" style="font-size: 1.5rem;"></i>
                                <h6 class="mb-0">Issues found during verification</h6>
                            }
                        </div>
                    </div>

                    <div class="list-group">
                        <div class="list-group-item d-flex justify-content-between align-items-center">
                            <span>Missing Secrets</span>
                            <span class="@(Results.MissingSecrets > 0 ? "text-danger" : "text-success")">
                                @Results.MissingSecrets
                            </span>
                        </div>
                        <div class="list-group-item d-flex justify-content-between align-items-center">
                            <span>Mismatched Secrets</span>
                            <span class="@(Results.MismatchedSecrets > 0 ? "text-danger" : "text-success")">
                                @Results.MismatchedSecrets
                            </span>
                        </div>
                        <div class="list-group-item">
                            <div class="d-flex justify-content-between align-items-center">
                                <span>Unindexed Secrets</span>
                                <span class="@(Results.UnindexedSecrets.Count > 0 ? "text-warning" : "text-success")">
                                    @Results.UnindexedSecrets.Count
                                </span>
                            </div>
                            @if (Results.UnindexedSecrets.Count > 0)
                            {
                                <div class="mt-2 small">
                                    <div class="fw-bold">Secret IDs:</div>
                                    <ul class="mb-0">
                                        @foreach (var id in Results.UnindexedSecrets)
                                        {
                                            <li>@id</li>
                                        }
                                    </ul>
                                </div>
                            }
                        </div>
                    </div>
                }
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" @onclick="OnClose">Close</button>
            </div>
        </div>
    </div>
</div>

@if (Show)
{
    <div class="modal-backdrop show"></div>
}

@code {
    [Parameter] public bool Show { get; set; }
    [Parameter] public VaultVerifyResults? Results { get; set; }
    [Parameter] public EventCallback OnClose { get; set; }
}
