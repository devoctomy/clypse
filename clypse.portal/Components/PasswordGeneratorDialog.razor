@using clypse.core.Password
@using clypse.core.Enums
@using clypse.portal.Models
@using clypse.portal.Models.Enums

@if (Show)
{
    <div class="modal" style="display: block; background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">
                        <i class="bi bi-calculator me-2"></i>
                        Password Generator
                    </h5>
                    <button type="button" class="btn-close" @onclick="HandleCancel"></button>
                </div>
                <div class="modal-body">
                    <!-- Generated Password Display -->
                    <div class="mb-4">
                        <label class="form-label">Generated Password</label>
                        <div class="input-group">
                            <input type="text" class="form-control" @bind="generatedPassword" readonly />
                            <button class="btn btn-outline-secondary" type="button" @onclick="RegeneratePassword" title="Regenerate Password">
                                <i class="bi bi-arrow-clockwise"></i>
                            </button>
                        </div>
                    </div>

                    <hr />

                    <!-- Password Type Selection -->
                    <div class="mb-3">
                        <label class="form-label">Password Type</label>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="passwordType" id="memorable" 
                                   @onchange="() => SetPasswordType(PasswordType.Memorable)" 
                                   checked="@(selectedPasswordType == PasswordType.Memorable)" />
                            <label class="form-check-label" for="memorable">
                                Memorable Password
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="passwordType" id="random" 
                                   @onchange="() => SetPasswordType(PasswordType.Random)" 
                                   checked="@(selectedPasswordType == PasswordType.Random)" />
                            <label class="form-check-label" for="random">
                                Random Password
                            </label>
                        </div>
                    </div>

                    <!-- Memorable Password Options -->
                    @if (selectedPasswordType == PasswordType.Memorable)
                    {
                        <div class="mb-3">
                            <label class="form-label">Template</label>
                            <select class="form-select" @bind="selectedTemplateName" @bind:after="OnTemplateChanged">
                                @if (memorablePasswordTemplates != null)
                                {
                                    @foreach (var template in memorablePasswordTemplates)
                                    {
                                        <option value="@template.Name">@template.Name</option>
                                    }
                                }
                            </select>
                        </div>
                        
                        <div class="form-check mb-3">
                            <input class="form-check-input" type="checkbox" id="shuffleTokens" @bind="shuffleTokens" @bind:after="OnOptionsChanged" />
                            <label class="form-check-label" for="shuffleTokens">
                                Shuffle Tokens
                            </label>
                        </div>
                    }

                    <!-- Random Password Options -->
                    @if (selectedPasswordType == PasswordType.Random)
                    {
                        <div class="mb-3">
                            <label class="form-label">Password Length</label>
                            <input type="number" class="form-control" @bind="passwordLength" @bind:after="OnOptionsChanged" min="1" max="128" />
                        </div>
                        
                        <div class="mb-3">
                            <label class="form-label">Character Types</label>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="lowercase" @bind="includeLowercase" @bind:after="OnOptionsChanged" />
                                <label class="form-check-label" for="lowercase">
                                    Lowercase (a-z)
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="uppercase" @bind="includeUppercase" @bind:after="OnOptionsChanged" />
                                <label class="form-check-label" for="uppercase">
                                    Uppercase (A-Z)
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="digits" @bind="includeDigits" @bind:after="OnOptionsChanged" />
                                <label class="form-check-label" for="digits">
                                    Digits (0-9)
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="special" @bind="includeSpecial" @bind:after="OnOptionsChanged" />
                                <label class="form-check-label" for="special">
                                    Special Characters (!&#64;&#35;$%...)
                                </label>
                            </div>
                        </div>
                        
                        <div class="form-check mb-3">
                            <input class="form-check-input" type="checkbox" id="atLeastOneOfEach" @bind="atLeastOneOfEachGroup" @bind:after="OnOptionsChanged" />
                            <label class="form-check-label" for="atLeastOneOfEach">
                                At least one of each group
                            </label>
                        </div>
                    }
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="HandleCancel">
                        Cancel
                    </button>
                    <button type="button" class="btn btn-primary" @onclick="HandleOk">
                        OK
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    protected bool atLeastOneOfEachGroup { get; set; } = true;
}
