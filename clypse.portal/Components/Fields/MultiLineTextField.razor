<div class="mb-3">
    <label class="form-label">@Label</label>
    <textarea class="form-control" 
              rows="@Rows"
              @bind="Value" 
              @bind:after="() => ValueChanged.InvokeAsync(Value)"
              placeholder="@Placeholder"
              style="resize: vertical;"
              readonly="@IsReadOnly"></textarea>
</div>