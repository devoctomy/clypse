@using clypse.core.Secrets
@using Microsoft.AspNetCore.Components.Web

<div class="mb-3">
    <label class="form-label">@Label</label>
    
    @if (!IsReadOnly)
    {
        <div class="row">
            <div class="col-8">
                <input type="text" 
                       class="form-control" 
                       @bind="newTag" 
                       @onkeypress="HandleTagKeyPress" 
                       placeholder="@Placeholder" />
            </div>
            <div class="col-4">
                <button type="button" 
                        class="btn btn-outline-primary w-100" 
                        @onclick="AddTag">
                    Add Tag
                </button>
            </div>
        </div>
    }
    
    @if (Tags?.Any() == true)
    {
        <div class="mt-2">
            @foreach (var tag in Tags.ToList())
            {
                <span class="badge bg-secondary me-1 mb-1">
                    @tag
                    @if (!IsReadOnly)
                    {
                        <button type="button" class="btn-close btn-close-white ms-1" style="font-size: 0.7em;" @onclick="() => RemoveTag(tag)"></button>
                    }
                </span>
            }
        </div>
    }
    else if (IsReadOnly)
    {
        <div class="text-muted">
            <em>No tags</em>
        </div>
    }
</div>