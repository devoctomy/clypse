@using clypse.core.Secrets
@using clypse.core.Enums
@using clypse.core.Extensions
@using clypse.portal.Components.Fields
@using Microsoft.AspNetCore.Components.Forms
@using System.Reflection
@using clypse.portal.Models.Enums

@if (Show)
{
    <div class="modal" style="display: block; background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-lg modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">
                        <i class="bi bi-@GetModeIcon() me-2"></i>
                        @GetModeTitle()
                    </h5>
                    <button type="button" class="btn-close" @onclick="HandleCancel"></button>
                </div>
                
                @if (EditableSecret != null && secretFields != null)
                {
                    <EditForm Model="EditableSecret" OnValidSubmit="HandleSave">
                        <div class="modal-body">
                            <!-- Secret Type combo box at the top -->
                            <div class="mb-3">
                                <label class="form-label">Secret Type</label>
                                <select class="form-select" value="@EditableSecret.SecretType" @onchange="OnSecretTypeChanged" disabled="@(Mode == CrudDialogMode.View)">
                                    @foreach (var secretType in Enum.GetValues<SecretType>().Where(st => st != SecretType.None))
                                    {
                                        <option value="@secretType">@secretType</option>
                                    }
                                </select>
                            </div>
                            
                            @foreach (var field in secretFields)
                            {
                                @RenderField(field.Key, field.Value)
                            }
                        </div>

                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" @onclick="HandleCancel" disabled="@isSaving">
                                Cancel
                            </button>
                            @if (Mode != CrudDialogMode.View)
                            {
                                <button type="submit" class="btn btn-primary" disabled="@isSaving">
                                    @if (isSaving)
                                    {
                                        <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                                        <span>@(Mode == CrudDialogMode.Create ? "Creating..." : "Saving...")</span>
                                    }
                                    else
                                    {
                                        <span>@(Mode == CrudDialogMode.Create ? "Create Secret" : "Save Changes")</span>
                                    }
                                </button>
                            }
                        </div>
                    </EditForm>
                }
                else
                {
                    <div class="modal-body">
                        <div class="alert alert-warning">
                            <i class="bi bi-exclamation-triangle me-2"></i>
                            Failed to load secret for @(Mode.ToString().ToLower()).
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
}