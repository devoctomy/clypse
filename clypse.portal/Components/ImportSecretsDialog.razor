@using clypse.core.Enums
@using Microsoft.AspNetCore.Components.Forms

@if (Show)
{
    <div class="modal" style="display: block; background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title">
                        <i class="bi bi-upload me-2"></i>
                        Import Secrets from CSV
                    </h5>
                    <button type="button" class="btn-close btn-close-white" @onclick="OnCancel"></button>
                </div>
                <div class="modal-body">
                    @if (!string.IsNullOrEmpty(ErrorMessage))
                    {
                        <div class="alert alert-danger" role="alert">
                            <i class="bi bi-exclamation-triangle me-2"></i>
                            @ErrorMessage
                        </div>
                    }

                    <div class="mb-3">
                        <label for="csvFile" class="form-label">
                            <strong>Select CSV File</strong>
                        </label>
                        <InputFile id="csvFile" 
                                   OnChange="@HandleFileSelected" 
                                   accept=".csv"
                                   class="form-control" 
                                   disabled="@IsImporting" />
                        <small class="form-text text-muted">
                            Select a CSV file containing secrets to import.
                        </small>
                    </div>

                    @if (!string.IsNullOrEmpty(selectedFileName))
                    {
                        <div class="mb-3">
                            <div class="alert alert-info" role="alert">
                                <i class="bi bi-file-earmark-text me-2"></i>
                                Selected file: <strong>@selectedFileName</strong>
                            </div>
                        </div>
                    }

                    <div class="mb-3">
                        <label for="csvFormat" class="form-label">
                            <strong>CSV Format</strong>
                        </label>
                        <select id="csvFormat" 
                                class="form-select" 
                                @bind="selectedFormat" 
                                disabled="@IsImporting">
                            @foreach (var format in availableFormats)
                            {
                                <option value="@format">@GetFormatDisplayName(format)</option>
                            }
                        </select>
                        <small class="form-text text-muted">
                            Select the format of your CSV file to ensure proper mapping of fields.
                        </small>
                    </div>

                    @if (previewData?.Any() == true)
                    {
                        <div class="mb-3">
                            <label class="form-label">
                                <strong>Preview (first 3 rows)</strong>
                            </label>
                            <div class="table-responsive" style="max-height: 200px; overflow-y: auto;">
                                <table class="table table-sm table-bordered">
                                    <thead class="table-light">
                                        <tr>
                                            @if (headers?.Any() == true)
                                            {
                                                @foreach (var header in headers)
                                                {
                                                    <th>@header</th>
                                                }
                                            }
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var row in previewData.Take(3))
                                        {
                                            <tr>
                                                @if (headers?.Any() == true)
                                                {
                                                    @foreach (var header in headers)
                                                    {
                                                        <td>@(row.ContainsKey(header) ? row[header] : "")</td>
                                                    }
                                                }
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    }
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="OnCancelClick" disabled="@IsImporting">
                        Cancel
                    </button>
                    <button type="button" 
                            class="btn btn-primary" 
                            @onclick="OnImportClick" 
                            disabled="@(!CanImport || IsImporting)">
                        @if (IsImporting)
                        {
                            <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                            <span>Importing...</span>
                        }
                        else
                        {
                            <i class="bi bi-upload me-2"></i>
                            <span>Import</span>
                        }
                    </button>
                </div>
            </div>
        </div>
    </div>
}