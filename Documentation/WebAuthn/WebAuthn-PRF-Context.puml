@startuml WebAuthn_PRF_System_Context
!include https://raw.githubusercontent.com/plantuml-stdlib/C4-PlantUML/master/C4_Context.puml

title WebAuthn PRF Encryption/Authentication System - Context View

Person(user, "User", "Person using Clypse Portal with biometric authenticator (Samsung Pass, Face ID, etc.)")

System(clypse, "Clypse Portal", "Web application requiring secure data encryption and authentication")

System_Ext(browser, "Web Browser", "Chrome, Safari, Edge with WebAuthn support")
System_Ext(platform_auth, "Platform Authenticator", "Samsung Pass, Face ID, Windows Hello - Hardware-backed biometric security")

Rel(user, clypse, "Encrypts/Decrypts sensitive data", "HTTPS")
Rel(clypse, browser, "Uses WebAuthn APIs with PRF extension", "JavaScript")
Rel(browser, platform_auth, "Invokes biometric authentication", "Platform APIs")
Rel(platform_auth, user, "Requests biometric verification", "Fingerprint/Face/PIN")

SHOW_LEGEND()
@enduml