{
  "name": "simple-webauthn-build",
  "version": "1.0.0",
  "private": true,
  "description": "Build tooling for SimpleWebAuthn library",
  "scripts": {
    "build": "tsc && rollup -c",
    "build:watch": "concurrently \"tsc --watch\" \"rollup -c --watch\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "dev": "concurrently \"npm run build:watch\" \"npm run test:watch\"",
    "clean": "rimraf dist/",
    "copy-to-portal": "copy dist\\simple-webauthn.js ..\\..\\clypse.portal\\wwwroot\\js\\simple-webauthn.js"
  },
  "devDependencies": {
    "typescript": "^5.2.2",
    "rollup": "^4.6.1",
    "@rollup/plugin-typescript": "^11.1.5",
    "@rollup/plugin-terser": "^0.4.4",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "@types/jest": "^29.5.8",
    "ts-jest": "^29.1.1",
    "concurrently": "^8.2.2",
    "rimraf": "^5.0.5"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/tests/test-helpers.ts"],
    "testMatch": ["<rootDir>/tests/**/*.test.ts"],
    "collectCoverageFrom": [
      "lib/**/*.ts",
      "!lib/**/*.d.ts"
    ]
  }
}